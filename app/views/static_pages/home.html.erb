            <%#= book.author %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

<div class="card" style="margin-top: 20px; padding-top: 20px;">
  <div class="content">
    <% Book.all.pluck(:tags).flatten.uniq.each do |tag| %>
      <%= link_to tag, "../search?utf8=✓&search=#{tag}" %>
    <% end %>
  </div>
</div>