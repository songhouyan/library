<div class="row">
  <div class="col-xs-12 col-md-12">
    <div class="card-container">
      <div class="card">
        <div class="front">
          <div class="cover">
            <%= image_tag(@user.cover.url(:medium), alt: 'img-circle') %>
          </div>
            <div class="user">
              <%= image_tag(@user.avatar.url(:medium), alt: 'img-circle') %>
            </div>
            <div class="content text-center">
                <div class="main">
                  <h3 class="name"><%= @user.name || '' %></h3>
                  <%# <p class="profession"><%= @user.age || '' </p>%>
                  <br>
                  <h5><%= fa_icon 'id-card', class: 'text-muted' %> <%= @user.age || '' %>, <%= @user.gender || '' %> </h5>
                  <h5><%= fa_icon 'comment', class: 'text-muted' %> <%= @user.bio %></h5>
                  <%= link_to @user.followers.count.to_s + ' Seguidores', followers_path(@user.username) %> | <%= link_to @user.following.count.to_s + ' Siguiendo', following_path(@user.username) %>
                  <%= render 'follow_form' if current_user %>
                </div>
            </div>
          </div>
        </div>
    </div>
  </div>
</div>

<div class="panel panel-default">
  <div class="panel-heading">
    <h4>Libros disponibles</h4>
  </div>
  <div class="panel-body">
  </div>
</div>