<h1>我的请求</h1>
<table class="table">
    <thead>
        <tr>
            <th>书</th>
            <th>用户</th>
            <th colspan="1"></th>
        </tr>
    </thead>
    <tbody>
        <% @requests.each do |request| %>
            <tr>
                <td><%= link_to request.book.title, request.book %></td>
                <td><%= request.user.username %></td>
                <td><%= link_to '接受', request, method: :delete, data: { confirm: '是否确定？' } if request.book.availability? %></td>
            </tr>
        <% end %>
    </tbody>
</table>