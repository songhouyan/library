<%= simple_form_for(book) do |f| %>
  <% if book.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(book.errors.count, "error") %> 禁止保存这本书</h2>

      <ul>
      <% book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.label :封面 %>
  <label class="btn btn-default" style="margin-left: 0.6%;">
    选择文件
    <span style="display:none;">
      <%= f.input :cover, as: :file %>
    </span>
  </label>
  <br> <br>

  
  
  <div class="field">
    <%= f.input :title %>
  </div>

  <div class="field">
    <%= f.input :author %>
  </div>

  <div class="field">
    <%= f.input :isbn %>
  </div>

  <div class="field">
    <%= f.input :comment %>
  </div>

  <div class="field">
    <%= f.input :availability %>
  </div>

  <div class="field">
    <%= f.input :tags %>
  </div>

  <div class="actions">
    <%= f.submit '保存', class: 'btn btn-success' %>
  </div>
<% end %>
