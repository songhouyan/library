<p id="notice"><%= notice %></p>

<h1>我的图书</h1>

<table class="table">
  <thead>
    <tr>
      <th>书名</th>
      <th>作者</th>
      <th>评论</th>
      <th>可获得</th>
      <th>ISBN</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.author %></td>
        <td><%= book.comment %></td>
        <td><%= book.availability %></td>
        <td><%= book.isbn %></td>
        <td><%= link_to '显示', book %></td>
        <td><%= link_to '修改', edit_book_path(book) %></td>
        <td><%= link_to '删除', book, method: :delete, data: { confirm: '确定删除吗？' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '增加我的书', new_book_path %>
